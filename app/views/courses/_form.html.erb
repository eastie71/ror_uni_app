<% if @course.errors.any? %>
	<div class="row">
		<div class="col s12 m12 l10">
			<div class="card-panel orange error-list">
				<h5 class="card-title"><%= pluralize(@course.errors.count, "error") %> occurred while trying to <%= @course.new_record? ? "create" : "update" %>:</h5>
				<ul>
					<% @course.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% end %>

<div class="row new-entity">
	<div class="col s12 m12 l10">
		<div class="card-panel">
			<div class="row">
				<%= form_for(@course) do |f| %>
					<h4 class="card-title new-entity-heading"><%= @course.new_record? ? "Create New Course" : "Edit Course" %></h4>
					<div class="row">
						<div class="input-field col s12">
							<%= f.text_field :code, placeholder: "Enter Course Code", autofocus: true %>
							<%= f.label :code, "Code", class: "active" %>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<%= f.text_field :name, placeholder: "Enter Course Name" %>
							<%= f.label :name, "Course Name", class: "active" %>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<%= f.text_area :description, rows: 12, id: "course-textarea", class: "materialize-textarea", placeholder: "Enter Full Course Description" %>
							<%= f.label :description, "Full Description", class: "active" %>
						</div>
					</div>
					<div class="row">
						<div class="col s12">
							<%= f.button class: "btn waves-effect waves-light", type: :submit do %>
								<%= @course.new_record? ? "Create" : "Update" %>
							<% end %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
        <div class="row cancel">
            [ <%= link_to @course.new_record? ? "CANCEL CREATE" : "CANCEL EDIT", root_path %> ]
        </div>
    </div>
</div>