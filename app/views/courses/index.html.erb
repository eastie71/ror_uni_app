<div class="row no-margin-bottom">
	<div class="col s12">
		<h3 class="left-align">Course Listing</h3>
	</div>
</div>
<div class="container">
  <div class="center">
    <%= will_paginate @courses, renderer: @custom_paginate_renderer %>
  </div>
</div>
<div class="row">
    <% @courses.each do |course| %>
      <div class="col s12 l6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= link_to course.code, course_path(course), class: "course-link" %> : <%= course.name %></span>
            <p><%= course.description %></p>
          </div>
          <div class="card-action">
            <a href="#">Enroll</a>
            <%= link_to "More Information", course_path(course) %>
            <%= link_to "Edit", edit_course_path(course) %>
          </div>
        </div>
      </div>
    <% end %>
</div>
<div class="container">
  <div class="center add-margin-bottom">
    <%= will_paginate @courses, renderer: @custom_paginate_renderer %>
  </div>
</div>