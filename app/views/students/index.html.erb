<div class="row no-margin-bottom">
  <div class="col s12">
    <h3 class="left-align">Student Directory</h3>
  </div>
</div>
<div class="container">
  <div class="center">
    <%= will_paginate @students, renderer: @custom_paginate_renderer %>
  </div>
</div>
  <div class="row">
    <% @students.each do |student| %>
      <div class="col s12 m6 l4">
        <div class="card student-card blue-grey darken-1">
          <!--
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="images/office.jpg">
          </div>
          -->
          <div class="card-content white-text">
            <span class="card-title activator"><%= student.name %><i class="material-icons right">more_vert</i></span>
            <p><%= student.email %></p>
          </div>
          <div class="card-action">
            <a href="#">EDIT</a>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Courses Enrolled<i class="material-icons right">close</i></span>
            <p>List off the courses the student is enrolled in.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<div class="container">
  <div class="center add-margin-bottom">
    <%= will_paginate @students, renderer: @custom_paginate_renderer %>
  </div>
</div>